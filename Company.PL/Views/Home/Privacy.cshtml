@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="container my-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h2 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-user-shield me-2"></i> Privacy Policy
            </h2>
        </div>
        <div class="card-body">
            <p class="lead text-muted mb-4">
                Your privacy is important to us. This policy explains how we collect, use, and protect your personal information.
            </p>
            <ul class="list-group mb-4">
                <li class="list-group-item">
                    <i class="fas fa-lock text-success me-2"></i>
                    <strong>Data Security:</strong> All user information is stored securely and protected against unauthorized access.
                </li>
                <li class="list-group-item">
                    <i class="fas fa-user-secret text-info me-2"></i>
                    <strong>No Third-Party Sharing:</strong> We do not share your data with third parties except as required by law.
                </li>
                <li class="list-group-item">
                    <i class="fas fa-database text-primary me-2"></i>
                    <strong>Data Collection:</strong> We only collect information necessary for your use of our services.
                </li>
                <li class="list-group-item">
                    <i class="fas fa-user-times text-warning me-2"></i>
                    <strong>Right to Deletion:</strong> You can request deletion of your data at any time by contacting support.
                </li>
            </ul>
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                For more details or questions about our privacy practices, please contact our support team.
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card-header.bg-white h2 {
            font-size: 2rem;
        }
        .list-group-item i {
            width: 1.5em;
            text-align: center;
        }
    </style>
}
