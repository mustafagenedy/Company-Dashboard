@model Company.DAL.Entity.Meeting
@{
    ViewData["Title"] = "Delete Meeting";
}
<div class="container my-4">
    <h1 class="h3 mb-4 text-danger">Delete Meeting</h1>
    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this meeting?</strong>
        <br />
        This action cannot be undone.
    </div>
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>
        <dt class="col-sm-3">Start Time</dt>
        <dd class="col-sm-9">@Model.StartTime</dd>
        <dt class="col-sm-3">End Time</dt>
        <dd class="col-sm-9">@Model.EndTime</dd>
        <dt class="col-sm-3">Location</dt>
        <dd class="col-sm-9">@Model.Location</dd>
        <dt class="col-sm-3">Created By</dt>
        <dd class="col-sm-9">@Model.CreatedBy?.EmployeeName</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div> 