@model Company.PL.Models.EditEmployeeViewModel
@{
    ViewData["Title"] = "Edit Employee";
}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Edit Employee</h2>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <h5>Validation Errors:</h5>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }
                    
                    <form asp-action="Edit" method="post">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <input type="hidden" asp-for="EmployeeId" />

                        <div class="mb-3">
                            <label asp-for="EmployeeName" class="form-label">Full Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="EmployeeName" class="form-control" placeholder="Enter employee's full name" />
                            </div>
                            <span asp-validation-for="EmployeeName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EmployeeEmail" class="form-label">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="EmployeeEmail" type="email" class="form-control" placeholder="Enter email address" />
                            </div>
                            <span asp-validation-for="EmployeeEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EmployeeRole" class="form-label">Role</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                                <select asp-for="EmployeeRole" class="form-select" asp-items="@(new SelectList(new[]{"Manager","Developer","Designer","QA Engineer","HR","Sales","Finance","Support"}, Model.EmployeeRole))">
                                    <option value="">Select a role</option>
                                </select>
                            </div>
                            <span asp-validation-for="EmployeeRole" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DepartmentId" class="form-label">Department</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-building"></i></span>
                                <select asp-for="DepartmentId" class="form-select" asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name", Model.DepartmentId))">
                                    <option value="">Select a department</option>
                                </select>
                            </div>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Update Employee
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
