@model IEnumerable<Company.DAL.Entity.Task>
@{
    ViewData["Title"] = "Tasks";
}
<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Tasks</h1>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i> Add New Task</a>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Due Date</th>
                <th>Project</th>
                <th>Assigned To</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@(task.Description != null && task.Description.Length > 40 ? task.Description.Substring(0, 40) + "..." : task.Description)</td>
                <td>@task.Status</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@task.Project?.Name</td>
                <td>
                    @if (task.Employee != null)
                    {
                        <span>@task.Employee.EmployeeName (Employee)</span>
                    }
                    else if (task.Department != null)
                    {
                        <span>@task.Department.Name (Department)</span>
                    }
                    else
                    {
                        <span class="text-muted">Unassigned</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-success">Edit</a>
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 