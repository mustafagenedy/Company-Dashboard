@model IEnumerable<Company.DAL.Entity.Project>
@{
    ViewData["Title"] = "Projects";
}
<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Projects</h1>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-1"></i> Add New Project</a>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Departments</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Is Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@(project.Description != null && project.Description.Length > 40 ? project.Description.Substring(0, 40) + "..." : project.Description)</td>
                <td>
                    @if (project.ProjectDepartments != null && project.ProjectDepartments.Any())
                    {
                        <ul class="mb-0 ps-3">
                        @foreach (var pd in project.ProjectDepartments)
                        {
                            <li>@pd.Department?.Name</li>
                        }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </td>
                <td>@project.StartDate.ToShortDateString()</td>
                <td>@project.EndDate.ToShortDateString()</td>
                <td>@(project.IsActive ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 