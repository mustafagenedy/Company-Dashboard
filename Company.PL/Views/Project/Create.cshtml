@model Company.PL.Models.CreateProjectViewModel
@{
    ViewData["Title"] = "Create Project";
    var departments = ViewBag.Departments as List<Company.DAL.Entity.Department>;
}
<div class="container my-4">
    <h1 class="h3 mb-4">Create Project</h1>
    <form asp-action="Create" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EndDate" class="form-label">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IsActive" class="form-label">Is Active</label>
            <input asp-for="IsActive" type="checkbox" class="form-check-input" />
        </div>
        <div class="mb-3">
            <label class="form-label">Departments</label>
            <select asp-for="SelectedDepartments" class="form-select" multiple size="5" asp-items="@(new MultiSelectList(departments, "Id", "Name", Model.SelectedDepartments))"></select>
        </div>
        <button type="submit" class="btn btn-primary">Create Project</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div> 