@model Company.DAL.Entity.Project
@{
    ViewData["Title"] = "Project Details";
}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">Project Details</h2>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-success me-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger me-2">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">Name</dt>
                        <dd class="col-sm-9 fw-semibold">@Model.Name</dd>
                        <dt class="col-sm-3 text-muted">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                        <dt class="col-sm-3 text-muted">Departments</dt>
                        <dd class="col-sm-9">
                            @if (Model.ProjectDepartments != null && Model.ProjectDepartments.Any())
                            {
                                <ul class="mb-0 ps-3">
                                @foreach (var pd in Model.ProjectDepartments)
                                {
                                    <li>@pd.Department?.Name</li>
                                }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </dd>
                        <dt class="col-sm-3 text-muted">Start Date</dt>
                        <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>
                        <dt class="col-sm-3 text-muted">End Date</dt>
                        <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>
                        <dt class="col-sm-3 text-muted">Is Active</dt>
                        <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div> 